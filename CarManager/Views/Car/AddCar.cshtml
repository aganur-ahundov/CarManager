@model CarManager.Models.Car



@{
    ViewBag.Title = "Add Car";
    Layout = "~/Views/Layout/CarManagerLayout.cshtml";
}


<h2>Add New Car</h2>

@using ( Html.BeginForm( "AddCar", "Car", FormMethod.Post ) )
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Car</h4>
        <hr />
        @Html.ValidationSummary( true, "" )

        <div class="form-group">
            @Html.LabelFor( model => model.Mark )
            @Html.EditorFor( model => model.Mark )
            @Html.ValidationMessageFor( model => model.Mark )
        </div>

        <div class="form-group">
            @Html.LabelFor( model => model.Model )
            @Html.EditorFor( model => model.Model )
            @Html.ValidationMessageFor( model => model.Model )
        </div>


        <div class="form-group">
            @Html.LabelFor( model => model.Year )
            @Html.EditorFor( model => model.Year )
            @Html.ValidationMessageFor( model => model.Year )
        </div>

        <div class="form-group">
            @Html.LabelFor( model => model.Weight )
            @Html.EditorFor( model => model.Weight )
            @Html.ValidationMessageFor( model => model.Weight )
        </div>

        <div class="form-group">
            @Html.LabelFor( model => model.CarryingCapacity )
            @Html.EditorFor( model => model.CarryingCapacity )
            @Html.ValidationMessageFor( model => model.CarryingCapacity )
        </div>


        <div class="form-group">
            @Html.LabelFor( model => model.IsBroken )
            @Html.EditorFor( model => model.IsBroken )
            @Html.ValidationMessageFor( model => model.IsBroken )
        </div>


        <div class="form-group">
            @Html.LabelFor( model => model.Type )
            @Html.EnumDropDownListFor( model => model.Type )
            @Html.ValidationMessageFor( model => model.Type )
        </div>

        <div class="form-group">
            <button class="add-route">Add</button>
            @Html.ActionLink( "Back to List", "Index", "Car" )
        </div>

    </div>
}

@section Scripts{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}